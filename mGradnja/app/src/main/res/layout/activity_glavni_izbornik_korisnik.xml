<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">
            <RelativeLayout
                android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".GlavniIzbornikKorisnik">


            <Spinner
                android:id="@+id/spinZupanije"
                android:layout_width="337dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinKategorije"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="31dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="42dp"
                android:spinnerMode="dialog" />

            <ImageView
                android:id="@+id/imgAdd"
                android:layout_width="wrap_content"
                android:layout_height="74dp"
                android:layout_below="@+id/btnIstrazi"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="158dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="164dp"
                android:padding="3dp"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/ic_add_circle_24dp" />

            <ImageView
                android:id="@+id/imgNotification"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_below="@+id/btnIstrazi"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="248dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="85dp"
                android:padding="3dp"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/ic_notifications_24dp" />

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:layout_below="@+id/btnIstrazi"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="329dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="4dp"
                android:padding="3dp"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/ic_person_24dp" />

            <ImageView
                android:id="@+id/imgWrench"
                android:layout_width="wrap_content"
                android:layout_height="69dp"
                android:layout_below="@+id/btnIstrazi"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="79dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="254dp"
                android:padding="3dp"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/ic_wrench_24dp" />

                <Button
                    android:id="@+id/btnIstrazi"
                    android:layout_width="208dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/spinZupanije"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="101dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginEnd="102dp"
                    android:backgroundTint="#27D570"
                    android:text="Istraži" />

            <TextView
                android:id="@+id/txtIstraziObrt"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:layout_below="@+id/imgPozadina"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="32dp"
                android:text="Istražite izvođače"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgHome"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:layout_below="@+id/btnIstrazi"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="333dp"
                android:padding="3dp"
                android:scaleType="fitEnd"
                app:srcCompat="@drawable/ic_home_24dp" />

            <Spinner
                android:id="@+id/spinKategorije"
                android:layout_width="339dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtIstraziObrt"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="31dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="41dp"
                android:spinnerMode="dialog" />

            <TextView
                android:id="@+id/txtID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinZupanije"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="319dp"
                android:text=" " />

                <ImageView
                    android:id="@+id/imgPozadina"
                    android:layout_width="412dp"
                    android:layout_height="379dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="-1dp"
                    android:layout_marginTop="-39dp"
                    android:layout_marginEnd="0dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/izbornik_korisnik" />

            </RelativeLayout>
    </TableLayout>
</ScrollView>