<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <TextView
        android:id="@+id/txtImateKorisnickiRacun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="140dp"
        android:text="Imate korisnički račun?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnPrijavaIzRegistracije"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegistracijaObrtnik" />


    <Button
        android:id="@+id/btnPrijavaIzRegistracije"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="128dp"
        android:layout_height="38dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="128dp"
        android:onClick="openLoginActivity"
        android:text="Prijavite se"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegistracijaObrtnik" />

    <Button
        android:id="@+id/btnRegistracijaKorisnik"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="293dp"
        android:layout_height="116dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#27D570"
        android:clickable="true"
        android:onClick="openUserRegistration"
        android:stateListAnimator="@null"
        android:text="Korisnik"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />


    <Button
        android:id="@+id/btnRegistracijaObrtnik"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="293dp"
        android:layout_height="116dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#27D570"
        android:clickable="true"
        android:onClick="openPerformerRegistration"
        android:stateListAnimator="@null"
        android:text="Izvođač radova"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegistracijaKorisnik" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="329dp"
        android:layout_height="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageView
        android:id="@+id/imgKorisnik"
        android:layout_width="109dp"
        android:layout_height="183dp"
        android:layout_marginTop="108dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/korisnik" />

    <ImageView
        android:id="@+id/imgObrtnik"
        android:layout_width="108dp"
        android:layout_height="177dp"
        android:layout_marginTop="308dp"
        android:elevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/obrtnik" />


</androidx.constraintlayout.widget.ConstraintLayout>