<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity">

    <TextView
        android:id="@+id/txtImateKorisnickiRacun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="21dp"
        android:text="Imate korisnički račun?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnPrijavaIzRegistracije"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegistracijaObrtnik"
        app:layout_constraintVertical_bias="0.376" />

    <Button
        android:id="@+id/btnPrijavaIzRegistracije"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="128dp"
        android:layout_height="38dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="24dp"
        android:onClick="openLoginActivity"
        android:text="Prijavite se"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegistracijaObrtnik"
        app:layout_constraintVertical_bias="0.372" />

    <Button
        android:id="@+id/btnRegistracijaKorisnik"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="293dp"
        android:layout_height="116dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#27D570"
        android:clickable="true"
        android:text="Korisnik"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/btnRegistracijaObrtnik"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="297dp"
        android:layout_height="108dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#27D570"
        android:clickable="true"
        android:lineSpacingExtra="30sp"
        android:text="Obrtnik"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRegistracijaKorisnik" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="329dp"
        android:layout_height="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />
</androidx.constraintlayout.widget.ConstraintLayout>