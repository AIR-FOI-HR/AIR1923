<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".QueryActivity"
        >


        <ImageView

            android:id="@+id/imgRectangle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="38dp"
            android:layout_marginRight="30dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            app:srcCompat="@drawable/rectangle" />

        <ImageView

            android:id="@+id/imgRectangle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="128dp"
            android:layout_marginRight="30dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            app:srcCompat="@drawable/rectangle" />

        <ImageView

            android:id="@+id/imgRectangle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="218dp"
            android:layout_marginRight="30dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            app:srcCompat="@drawable/rectangle" />


        <ImageView

            android:id="@+id/imgRectangle4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="184dp"
            android:layout_marginRight="30dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            app:srcCompat="@drawable/rectangle2" />

        <ImageView

            android:id="@+id/imgRectangle6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="490dp"
            android:layout_marginRight="30dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            app:srcCompat="@drawable/rectangle" />

        <ImageView

            android:id="@+id/imgRectangle7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="580dp"
            android:layout_marginRight="30dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            app:srcCompat="@drawable/rectangle" />
        <ImageView

            android:id="@+id/imgRectangle5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="670dp"
            android:layout_marginRight="30dp"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            app:srcCompat="@drawable/rectangle" />


        <TextView
            android:id="@+id/txtNaslovIzradaUpita"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="25dp"
            android:clickable="true"
            android:text="Izrada upita"
            android:textColor="#000000"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="90dp"
            android:text="OPIS RADOVA"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="140dp"
            android:text="Naziv radova"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtNazivRadova"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Upišite naziv"
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="170dp"
            android:maxLines="1"
            android:inputType="text"
            android:maxLength="22"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategorija potraživanja radova"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="50dp"
            android:textColor="#000000"
            android:textSize="18sp"/>
        <Spinner
            android:id="@+id/spinKategorije"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="255dp"
            android:layout_marginLeft="50dp"

            android:spinnerMode="dialog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datum početka radova"
            android:layout_marginTop="320dp"
            android:layout_marginLeft="50dp"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txtDatumPocetkaRadova"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="345dp"
            android:layout_marginLeft="50dp"
            android:background="@null"
            android:textSize="20sp"
            android:hint="Odaberite datum"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opis potraživanih radova"
            android:layout_marginTop="410dp"
            android:layout_marginLeft="50dp"
            android:textColor="#000000"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/txtOpisRadova"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="440dp"
            android:background="@null"
            android:gravity="top|start"
            android:hint="Opišite..."
            android:inputType="textMultiLine"
            android:lines="5"
            android:maxWidth="300dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="590dp"
            android:text="Županija"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinZupanije"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="615dp"
            android:spinnerMode="dialog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="680dp"
            android:text="Grad"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtGrad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Upišite grad"
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="710dp"
            android:maxLines="1"
            android:inputType="text"
            android:maxLength="22"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="770dp"
            android:text="Adresa radova"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtAdresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="Upišite adresu"
            android:textSize="20sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="800dp"
            android:maxLines="1"
            android:inputType="text"
            android:maxLength="22"
            />

        <Button
            android:id="@+id/btnPotvrdi"
            android:layout_width="320dp"
            android:layout_height="62dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="880dp"
            android:layout_marginEnd="46dp"
            android:layout_marginRight="46dp"
            android:background="#27D570"
            android:text="Potvrdi"
            />

        <ImageButton
            android:id="@+id/btnDatum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="250dp"
            android:backgroundTint="#27D570"
            app:srcCompat="@android:drawable/ic_menu_my_calendar" />






    </RelativeLayout>
</ScrollView>
